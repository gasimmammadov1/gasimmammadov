<aside id="aside" class="col-md-4">
    
    <div class="widget">
		<div class="widget-search">
			<form action="/posts/search" method="get">
				<input class="search-input form-control" type="text" name="look" placeholder="Search">
				<button class="search-btn" type="submit"><i class="fas fa-search"></i></button>
			</form>
		</div>
	</div>

	<!-- Categories -->
	<div class="widget">
		<h3 class="mb-3">Categories</h3>
		<div class="widget-category">
			
            {{#each categories}} {{!-- main.js'de gonderilen kateqoriya datasin almaq ucun --}}
			<a href="/posts/category/{{_id}}"># {{name}}<span>({{num_of_posts}})</span></a>{{!--main.js'deki num_of_posts'u bura yazdiq --}}
            {{/each}}
		</div>
	</div>
	<!-- /Categories -->

	
	<!-- Lastest posts -->
	<div class="widget">
		<h3 class="mb-3">Lastest Posts</h3>
			{{#each (limit posts 5)}}
			<div class="widget-post">
				 
				{{!-- helpers qovlugundaki limit faylinda olan limit funksiyasi sayesinde --}}
				<a href="/posts/{{_id}}">
					<img class="img-fluid" src="{{post_image}}" alt="">{{title}}
				</a>
				
				<ul class="blog-meta">
					<li>{{generateDate date 'DD MMM YYYY'}}</li>
				</ul>

				<br>
				
				
				<a href="{{!-- /posts/category/{{_id}} --}}">
				<ul class="blog-meta">
					<li># {{category.name}}</li>
				</ul>
				</a>
				
			</div>
			{{/each}}
				
	</div>
	<!-- /Lastest posts -->

</aside>