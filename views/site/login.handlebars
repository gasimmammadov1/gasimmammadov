{{! bu sehife contact sehifesi idi, kopyaladim, bezi deyisiklikler edib login sehifesine cevirdim }}

<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-contact md-padding">
  <h1 class="text-white text-center">{{!-- LOG IN --}}</h1>
</section>

<!--==========================
    Contact Section
============================-->
<section id="contact" class="md-padding">
  <div class="container">

    <div class="row text-center">
      <div class="col-md-4 offset-md-4">
        <div class="section-header">
          <h2 class="title">Log In</h2>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">

        	{{#if sessionFlash.message}}
						<div class="{{sessionFlash.type}}"> 
							{{!-- .type yazdigimiz ucun posts.js'deki bootstrap classlari gelecek bura --}}
							{{sessionFlash.message}} {{!-- ve bu setrle bildiririk ki hemen mesaj yazilsin burda. --}}
						</div>
					{{/if}}

        <form action="/users/login" method="post"> {{!-- routere baglanan hissesi --}}
          {{! logine uygun deyisdik adlari }}
          <div class="row">
            <div class="offset-2 col-md-8">
              {{! "col-md-6" idi bu, deyisdim 8 etdim ve
            bootstrap containerinde umumi 12 bolgu var deye soldan da 2 dene kesdim merkezlesdirdim }}
              <div class="form-group">
                <input
                  class="form-control"
                  name="email"
                  type="email"
                  placeholder="Email *"
                  required="required"
                  data-validation-required-message="Please enter your email."
                />
                <p class="help-block text-danger"></p>
              </div>
              {{!-- buralari email etdik --}}
    
              <div class="form-group">
                <input
                  class="form-control"
                  name="password"
                  type="password"
                  placeholder="Password *"
                  required="required"
                  data-validation-required-message="Please enter your password."
                />
                <p class="help-block text-danger"></p>
              </div>
            </div>
            {{! burda message hissesi var idi, sildik. }}
            <div class="clearfix"></div>
            <div class="col-lg-12 text-center">
              <div id="success"></div>
              <button id="sendLoginButton" class="main-btn" type="submit">Log In</button> 
              {{!-- buralari da login etdik --}}
            </div>
          </div>
        </form>
      </div>
    </div>

  </div>
</section>